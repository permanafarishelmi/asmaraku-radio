        <!--  -->
        <section class="max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md">
          <h1 class="text-4xl font-bold italic text-emerald-200" style="font-family: 'Lato', sans-serif">tulis komentar dibawah!</h1>
        
          <form method="post" action="/" onsubmit="return submitForm()">
            <div class="grid grid-cols-1 gap-6 mt-4">
              <div>
                <label class="text-blue-700 dark:text-gray-200" for="nama">Nama / Asal dari mana</label>
                <input
                  name="title"
                  id="nama"
                  type="text"
                  class="block w-full px-4 py-2 mt-2 text-rose-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring"
                  placeholder="ex : bawang putih"
                />
              </div>
        
              <div>
                <label class="text-blue-700 dark:text-gray-200" for="pesan">Komentar / Request Judul Lagu</label>
                <input
                  name="content"
                  id="pesan"
                  type="text"
                  class="block w-full px-4 py-2 mt-2 text-rose-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring"
                  placeholder="req lagu coldplay"
                />
              </div>
            </div>
        
            <div class="flex justify-end mt-6">
              <button id="submitButton" type="submit" class="px-8 py-2.5 leading-5 text-white transition-colors duration-300 transform bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 rounded-md hover:from-indigo-600 hover:via-purple-600 hover:to-pink-600 focus:outline-none focus:bg-black">
                <span id="submitText">kirim</span>
                <span id="loadingSpinner" class="hidden ml-2 animate-spin">&#10240;</span>
              </button>
            </div>
          </form>
        </section>
        
        <script>
          function submitForm() {
          // Menonaktifkan tombol submit
          document.getElementById("submitButton").disabled = true;

          // Menampilkan spinner dan mengganti teks tombol submit
          document.getElementById("loadingSpinner").classList.remove("hidden");
          document.getElementById("submitText").innerText = "sudah terkirim";

          // Menggunakan AJAX untuk mengirim form
          var xhr = new XMLHttpRequest();
          xhr.open("POST", "/", true);
          xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");

          xhr.onreadystatechange = function () {
            if (xhr.readyState == 4 && xhr.status == 200) {
              // Form berhasil terkirim
              document.getElementById("loadingSpinner").classList.add("hidden");
              document.getElementById("submitText").innerText = "Sent!";
              // Opsional: Tambahkan logika lain setelah pengiriman berhasil
            }
          };

          // Mengambil data form
          var formData = new FormData(document.getElementById("noteForm"));

          // Mengirim form
          xhr.send(new URLSearchParams(formData));

          // Mencegah form bawaan untuk dikirim
          return false;
          }
        </script>        
