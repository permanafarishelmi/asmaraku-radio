        <div class="max-w-4xl mx-auto p-6 bg-white rounded-md shadow-md">
          <h1 class="text-3xl font-bold mb-4">Daftar Komentar</h1>
          <ul class="list-disc ml-6">
            <% notes.forEach(function(note) { %>
              <li class="mb-4">
                <div class="flex items-center mb-2">
                  <!-- <span class="text-gray-600 mr-2"><%= new Date(note.createdAt).toLocaleString() %></span> -->
                  <strong class="text-blue-700"><%= note.title %></strong>:
                </div>
                <p class="text-gray-800"><%= note.content %></p>
              </li>
            <% }); %>
          </ul>
        </div>

</body>

